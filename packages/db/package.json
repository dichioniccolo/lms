{
  "name": "@acme/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./env": "./src/env.mjs"
  },
  "license": "MIT",
  "scripts": {
    "with-env": "doppler run --",
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "pnpm with-env drizzle-kit push:pg",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "migrate-mysql-to-postgres": "npx tsx ./src/scripts/migrate-mysql-to-postgresql.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@t3-oss/env-nextjs": "^0.9.2",
    "drizzle-orm": "^0.30.1",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "server-only": "^0.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@acme/eslint-config": "^0.1.0",
    "@acme/prettier-config": "^0.1.0",
    "@acme/tsconfig": "^0.1.0",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.17",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@acme/eslint-config/base"
    ]
  },
  "prettier": "@acme/prettier-config"
}